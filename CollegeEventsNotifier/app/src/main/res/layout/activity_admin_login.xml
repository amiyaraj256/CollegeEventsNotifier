<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firstone.collegeeventsnotifier.AdminLogin"
    android:background="#26ae90">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Admin"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:textAlignment="center"
        android:textColor="#ff7e51c2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adminName"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:width="250dp"
        android:hint="Enter your username"
        android:textAlignment="center"
        android:singleLine="true"
        android:backgroundTint="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/adminPassword"
        android:layout_below="@+id/adminName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:width="250dp"
        android:hint="Enter your Password"
        android:textAlignment="center"
        android:singleLine="true"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/adminButtonLogin"
        android:layout_below="@+id/adminPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="adminLogin"
        android:textColor="#ffffffff"
        android:background="#ff7e51c2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COLLEGE EVENTS NOTIFIER"
        android:id="@+id/textView6"
        android:gravity="left"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
